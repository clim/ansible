[Unit]
Description=ZooKeeper
After=network.target
Wants=network.target

[Service]
Environment=JAVAX={{ java_path }}
Type=simple
User={{ ansible_user }}
Group={{ ansible_user }}
ExecStart={{ zookeeper_home }}/bin/zkServer.sh start-foreground
Restart=always
RestartSec=3
TimeoutSec=300

[Install]
WantedBy=multi-user.target
